<div class="wrapper">
  <h1>Book Communication</h1>
</div>
<div class="button-zone">
  <div class="page-title">
  登録情報変更
  </div>
</div>
<div class="form-main-field">
  <%= form_with model: current_user, local: true do |f|%>
    <div class="form-style">
      <div class="form-space">
        <%= f.label :name, class:"user-form-tag" %>
        <%= f.text_field :name, class:"user-form-field" %>
      </div>
      <div class="form-space">
        <%= f.label :email, class:"user-form-tag" %>
        <%= f.email_field :email, class:"user-form-field" %>
      </div>
      <div class="btn-area">
        <%= f.submit "変更する", class:"btn" %>
        <%= link_to "戻る", "#", class:"btn-2" %>
      </div>
    </div>
  <% end %>
</div>